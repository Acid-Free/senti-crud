<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Job Postings</title>
</head>
<body>
  <ul>

    <%jobPostings.forEach(jobPosting => { %>
      <h2><%= jobPosting.title %></h2>
      <p><%= jobPosting.description %></p>
      <p><%= jobPosting.location %></p>
      <p><%= jobPosting.salary %></p>
      <p>Company: <%= jobPosting.company.name %></p>
      <p>Website: <%= jobPosting.company.website %></p>
      <form action="/edit-job-postings/<%= jobPosting._id %>" method="get">
        <button type="submit">Edit</button>
      </form>
      <form action="/delete-job-postings/<%= jobPosting._id %>" method="post">
        <input type="hidden" name="_method" value="DELETE">
        <button>Delete</button>
      </form>
    <% }); %>
  </ul>
  
  <h1>Create Job Posting</h1>
  <form action="*" method="post">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title">
    <br>
    <label for="description">Description:</label>
    <textarea id="description" name="description"></textarea>
    <br>
    <label for="location">Location:</label>
    <input type="text" id="location" name="location">
    <br>
    <label for="salary">Salary:</label>
    <input type="text" id="salary" name="salary">
    <br>
    <label for="company.name">Company Name:</label>
    <input type="text" id="company.name" name="company.name">
    <br>
    <label for="company.website">Company Website:</label>
    <input type="text" id="company-website" name="company.website">
    <br>
    <button type="submit">Create</button>
  </form>
      
  <script src="/scripts/main.js"></script>
</body>
</html>